{
  "name": "@cin7/design-tokens",
  "version": "0.1.0",
  "description": "Extended design tokens for Cin7 DSL Design System Layer",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/tokens.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./css": {
      "default": "./dist/tokens.css"
    },
    "./scss": {
      "default": "./src/tokens.scss"
    }
  },
  "files": [
    "dist",
    "src/tokens.scss"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && pnpm build:css",
    "build:css": "sass src/tokens.scss dist/tokens.css",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@shopify/polaris-tokens": "^9.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "sass": "^1.69.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}